@using MelonBookshelf.Data
@model ResourcePageViewModel

@{
    ViewData["Title"] = "List of Resources";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="text-center">
            <h1>Resources</h1>
        </div>
        <div>
            <a asp-controller="Resource" asp-action="Create" class="btn btn-outline-success">Add New Resource</a>
            <p></p>
        </div>
        <form method="post" action="@Url.Action("Index")" class="mb-3">
            <div class="input-group">
                <select name="resourceType" class="form-control">
                    <option value="">Select Type</option>
                    @foreach (var value in Enum.GetValues(typeof(ResourceType)))
                    {
                        <option value="@value">@value</option>
                    }
                </select>
                <select name="categoryId" class="form-control">
                    <option value="">All Categories</option>
                    @foreach (var value in Model.Categories)
                    {
                        <option value="@value.CategoryId">@value.Name</option>
                    }
                </select>
                <input type="text" name="title" class="form-control" placeholder="Title">
                <button type="submit" class="btn btn-outline-primary" asp-action="Index">Search</button>
                <button type="button" class="btn btn-outline-secondary" onclick="clearSearch()">Clear</button>
            </div>
        </form>
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>Type</th>
                    <th>Category</th>
                    <th>Author</th>
                    <th>Title</th>
                    <th>Location</th>
                    <th>Wanters</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Resources)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Type)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Category.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Author)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Location)
                        </td>
                        @if (item.Type == ResourceType.Physical)
                        {
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.wantedResources.Count)
                            </td>
                        }
                        else{
                            <td class="align-middle">

                            </td>
                        }
                        <td class="align-middle">
                            <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.ResourceId">Details</a>
                            @if (item.Type == ResourceType.Physical)
                            {
                                <a class="btn btn-danger" asp-action="Want" asp-route-resourceId="@item.ResourceId">Want</a>
                                <a class="btn btn-danger" asp-action="Unwant" asp-route-resourceId="@item.ResourceId">Unwant</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    function clearSearch() {
        document.querySelector('form').reset();
    }
</script>
