@using MelonBookshelf.Data
@model ResourcePageViewModel

@{
    ViewData["Title"] = "List of Resources";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <form method="post" action="@Url.Action("Index")" class="mb-3">
            <div class="input-group">              
                <select name="resourceType" class="form-control" >
                    <option value="">Select Type</option>
                    @foreach (var value in Enum.GetValues(typeof(ResourceType)))
                    {
                        <option value="@value">@value</option>
                    }
                </select>
                <select name="categoryId" class="form-control">
                    <option value="">All Categories</option>
                    @foreach (var value in Model.Categories)
                    {
                        <option value="@value.CategoryId">@value.Name</option>
                    }
                </select>
                <input type="text" name="title" class="form-control" placeholder="Title">
                <button type="submit" class="btn btn-outline-primary" asp-action="Index">Search</button>
                <button type="button" class="btn btn-outline-secondary" onclick="clearSearch()">Clear</button>
            </div>
        </form>
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@nameof(ResourceViewModel.Title)</th>
                    <th>@nameof(ResourceViewModel.Author)</th>
                    <th>@nameof(ResourceViewModel.Type)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Resources)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Author)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Type)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.ResourceId">
                                <i class="bi bi-pencil-square"></i>Details
                            </a>
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.ResourceId"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ResourceId"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div>
    <a asp-controller="Resource" asp-action="Create" class="btn btn-outline-success">Add New Resource</a>

</div>
<script>
    function clearSearch() {
        document.querySelector('form').reset();
    }
</script>
