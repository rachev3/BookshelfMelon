@model CategoryViewModel

<!-- Modal -->
<form id="formDelete" class="post-using-ajax" data-ajax="true" data-ajax-method="post" data-ajax-mode="replace" data-ajax-update="#tableContainer" data-ajax-success="hideModal" asp-controller="Category" asp-action="DeleteConfirm">
    <div class="modal fade" id="deleteConfirmationModal" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Delete</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this category?
                </div>
                <input type="hidden" asp-for="@Model.CategoryId" />
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <input type="submit" value="Delete" class="btn btn-danger" id="deleteCategoryLink" asp-action="DeleteConfirm" />
                </div>
            </div>
        </div>
    </div>
</form>
<script>
    function hideModal() {
        $('#deleteConfirmationModal').modal('hide');
    }
    $(function () {
        $('.post-using-ajax').each(function () {
            var $form = $(this);
            $form.submit(function (e) {
                e.preventDefault();

                $.ajax({
                    type: $form.attr('method'),
                    url: $form.attr('action'),
                    data: $form.serialize(),
                    success: function (msg) {
                        hideModal();
                    }
                });
            });
        });
    });

</script>
