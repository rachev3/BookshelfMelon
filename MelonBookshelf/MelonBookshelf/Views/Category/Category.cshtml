@model CategoryPageViewModel

@{
    ViewData["Title"] = "List of Categories";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="text-center">
            <h1>Categories</h1>
        </div>
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>Name</th> 
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Categories)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                       
                        <td class="align-middle">
                            @if (User.IsInRole("Admin"))
                            {
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.CategoryId"><i class="bi bi-pencil-square"></i>Edit</a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CategoryId"><i class="bi bi-trash"></i>Delete</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@if (User.IsInRole("Admin"))
{
    <div>
        <a asp-controller="Category" asp-action="Create" class="btn btn-outline-success">Add New Category</a>

    </div>
}

