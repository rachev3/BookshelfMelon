<script>
    $(function () {
        $('.post-using-ajax').each(function () {
            var $form = $(this);
            $form.submit(function (e) {
                e.preventDefault();

                $.ajax({
                    type: $form.attr('method'),
                    url: $form.attr('action'),
                    data: $form.serialize(),
                    success: function (msg) {
                        hideModal();
                    }
                });
            });
        });
    });
</script>
