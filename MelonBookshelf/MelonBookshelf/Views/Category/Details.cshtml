@model CategoryViewModel

@{
    ViewData["Title"] = "Team Category";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Category`s details</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-4">               
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
    
                <div class="form-group">
                    <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@Model.CategoryId">Edit</a>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All Categories</a>
                </div>

            </div>
        </div>
    </div>
</div>
