@model CategoryViewModel


<form id="formEdit" class="post-using-ajax" data-ajax="true" data-ajax-method="post" data-ajax-mode="replace" data-ajax-update="#tableContainer" data-ajax-success="hideEditModal()" asp-controller="Category" asp-action="Edit">
    <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editModalLabel">Update Category</h5>
                    <button type="button" class="close" onclick="hideEditModal()" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="modal-body"><input type="hidden" asp-for="CategoryId" /> </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-outline-success float-right" id="editCategoryLink" asp-action="Edit" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
