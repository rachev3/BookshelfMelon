@model RequestPageViewModel

@{
    ViewData["Title"] = "List of Requests";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="text-center">
            <h1>Requests</h1>
        </div>
        <div>
            <a asp-controller="Request" asp-action="Create" class="btn btn-success">Add New Request</a>

        </div>
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>Status</th>
                    <th>Category</th>
                    <th>Author</th>
                    <th>Title</th>
                    <th>Priority</th>
                    <th>DateAdded</th>
                    <th>Likes</th>
                    <th>Followers</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Requests)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Category.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Author)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Priority)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.DateAdded)
                        </td>
                        <td class="align-middle">                           
                                @Html.DisplayFor(modelItem => item.Upvotes.Count)                          
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Followers.Count)
                        </td>
                        <td class="align-middle">
                            <p></p>
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.RequestId">
                                <i class="bi bi-pencil-square"></i>Details
                            </a>
                            @if(item.Liked == true){
                                <a class="btn btn-success" asp-action="Downvote" asp-route-requestId="@item.RequestId"><i class="bi bi-pencil-square"></i>Like</a>
                            }
                            else{
                                <a class="btn btn-outline-success" asp-action="Upvote" asp-route-requestId="@item.RequestId"><i class="bi bi-pencil-square"></i>Like</a>
                            }
                            @if (item.Followed == true)
                            {
                                <a class="btn btn-primary" asp-action="Unfollow" asp-route-requestId="@item.RequestId"><i class="bi bi-pencil-square"></i>Follow</a>
                            }
                            else
                            {
                                <a class="btn btn-outline-primary" asp-action="Follow" asp-route-requestId="@item.RequestId"><i class="bi bi-pencil-square"></i>Follow</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

