@using MelonBookshelf.Data
@model RequestPageViewModel

@{
    ViewData["Title"] = "List of Requests";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="text-center">
            <h1>Following requests</h1>
        </div>
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>Status</th>
                    <th>Category</th>
                    <th>Type</th>
                    <th>Title</th>
                    <th>Link</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Requests)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Category.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Type)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Link)
                        </td>
                        <td class="align-middle">
                            <p></p>
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-danger" asp-action="Unfollow" asp-route-requestId="@item.RequestId" asp-route-commingViewName="@item.CommingViewName"><i class="bi bi-pencil-square"></i>Unfollow</a>
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.RequestId">
                                <i class="bi bi-pencil-square"></i>Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

