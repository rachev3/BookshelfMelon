@model RequestPageViewModel

<table class="table">
    <thead>
        <tr class="text-center">
            <th>Category</th>
            <th>Type</th>
            <th>Title</th>
            <th>Link</th>
            <th>FirstName </th>
            <th>LastName</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Requests)
        {
            <tr>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Link)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.User.FirstName)

                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.User.LastName)
                </td>

                <td class="align-middle">
                    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.RequestId">
                        <i class="bi bi-pencil-square"></i>Details
                    </a>
                    <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.RequestId" asp-route-commingViewName="@item.CommingViewName">
                        <i class="bi bi-pencil-square"></i>Edit
                    </a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.RequestId" asp-route-commingViewName="@item.CommingViewName" data-ajax="true" data-ajax-method="get" data-ajax-mode="replace" data-ajax-update="#confirmDeletePartial" data-ajax-success="showModal">
                        <i class="bi bi-trash"></i>Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>