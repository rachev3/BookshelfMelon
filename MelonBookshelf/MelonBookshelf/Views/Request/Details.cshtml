@model RequestViewModel

@{
    ViewData["Title"] = "Team Requests";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Request`s details</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-4">
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" readonly />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Author" class="control-label"></label>
                    <input asp-for="Author" class="form-control" readonly />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@Model.RequestId">Edit</a>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All Requests</a>
                </div>

            </div>
        </div>
    </div>
</div>