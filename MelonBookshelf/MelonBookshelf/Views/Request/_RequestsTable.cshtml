@model RequestPageViewModel

<table class="table">
    <thead>
        <tr class="text-center">
            <th>Status</th>
            <th>Category</th>
            <th>Author</th>
            <th>Title</th>
            <th>Priority</th>
            <th>DateAdded</th>
            <th>Likes</th>
            <th>Followers</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Requests)
        {
            <tr>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Priority)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.DateAdded)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Upvotes.Count)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Followers.Count)
                </td>
                <td class="align-middle">
                    <a class="btn btn-outline-info mt-1" asp-action="Details" asp-route-id="@item.RequestId" style="width: 80px;">
                        <i class="bi bi-pencil-square"></i>Details
                    </a>
                @if (item.Liked == true)
                {
                        <a class="btn btn-success mt-1" asp-action="Downvote" asp-route-requestId="@item.RequestId" style="width: 80px;"><i class="bi bi-pencil-square"></i>Like</a>
                }
                else
                {
                        <a class="btn btn-outline-success mt-1" asp-action="Upvote" asp-route-requestId="@item.RequestId" style="width: 80px;"><i class="bi bi-pencil-square"></i>Like</a>
                }
                @if (item.Followed == true)
                {
                        <a class="btn btn-primary mt-1" asp-action="Unfollow" asp-route-requestId="@item.RequestId" style="width: 80px;"><i class="bi bi-pencil-square"></i>Follow</a>
                }
                else
                {
                        <a class="btn btn-outline-primary mt-1" asp-action="Follow" asp-route-requestId="@item.RequestId" style="width: 80px;"><i class="bi bi-pencil-square"></i>Follow</a>
                }
                </td>
            </tr>
        }
    </tbody>
</table>

