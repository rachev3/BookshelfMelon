@model RequestPageViewModel

@{
    ViewData["Title"] = "List of Requests";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="text-center">
            <h1>My Requests</h1>
        </div>
        <div>
            <a asp-controller="Request" asp-action="Create" class="btn btn-success">Add New Request</a>

        </div>
       <div id="tableContainer">
            @Html.Partial("_MyRequestsTable", @Model)
       </div>
        <div id="confirmDeletePartial"> </div>
    </div>
</div>

<script>
    function confirmDelete(requestId) {
        var deleteLink = document.getElementById("deleteRequestLink");
        deleteLink.href = deleteLink.href.replace("", requestId);
        $('#deleteConfirmationModal').modal('show');
    }
    function showModal() {
        $('#deleteConfirmationModal').modal('show');
    }
    function hideModal() {
        $('#deleteConfirmationModal').modal('hide');
    }
</script>


